    <SolidColorBrush x:Key="defaultHoverBackground" Color="Red"/>
    <SolidColorBrush x:Key="defaultBackground" Color="Yellow"/>
    <sys:Double x:Key="defaultBorderWeight">0.5</sys:Double>
    <ControlTemplate TargetType="local:RatingBarButton" x:Key="defaultTemplate">
        <ed:RegularPolygon x:Name="regularPolygon" Fill="White" Height="100" InnerRadius="0.55" PointCount="5" Stretch="Fill" Stroke="Black" 
                       Width="100" StrokeThickness="0.5">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Hovered">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="regularPolygon" To="Red" Duration="0:0:0.3">
                                <!--<EasingColorKeyFrame KeyTime="0:0:0.3" Value="Red"/>-->
                            </ColorAnimation>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </ed:RegularPolygon>
